<header>
    <nav class="header">
        <div class="header-container">
            <div class="header-top">
                <div class="relative flex items-center">
                    <div class="header-mobile-menu-toggle"><button class="outline-none mobile-menu-button"
                            id="nav-mobile-button"><svg class="w-6 h-6 text-gray-500" x-show="!showMenu" fill="none"
                                stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg></button></div>
                    <h3><a class="site-title" title="{{site.subtitle}}" href="/">{{site.title}}</a></h3>
                    <nav class="header-nav">
                        <ul class="flex menu">
                            {{#each navs}}<li class="header-nav-item"><a href="{{url}}">{{name}}</a>
                            </li>{{/each}}
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="hidden header-mobile-menu" id="nav-mobile-menu">
                <ul>
                    {{#each navs}}<li class="mobile-nav-item"><a href="{{url}}">{{name}}</a>
                    </li>{{/each}}
                </ul>
            </div>
        </div>
    </nav>
</header>